<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="NavButton" TargetType="RadioButton">
        <Setter Property="BorderBrush" Value="#5b5b5b"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="FontSize" Value="25"/>



        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid>
                        <ContentPresenter Margin="10,10,10,10" HorizontalAlignment="Center" Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Grid>
                                <Border BorderThickness="0,0,0,5" CornerRadius="10,10,10,10" BorderBrush="{TemplateBinding BorderBrush}">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.1,0.1" StartPoint="1,1">
                                            <GradientStop Color="#00000000" Offset="0"/>
                                            <GradientStop Color="#AA2F2F2F" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <ContentPresenter Margin="10,10,10,10" HorizontalAlignment="Center" Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>

            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Grid>
                                <Border BorderThickness="0,0,0,5" CornerRadius="10,10,10,10"  BorderBrush="{TemplateBinding BorderBrush}">
                                    <Border.Background>
                                        <LinearGradientBrush EndPoint="0.75,0.75" StartPoint="1,1">
                                            <GradientStop Color="#00000000" Offset="0"/>
                                            <GradientStop Color="#AA2F2F2F" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <ContentPresenter Margin="10,10,10,10" HorizontalAlignment="Center" Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>



    <Style x:Key="UIBUTTON" TargetType="Button">
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#FF4F4F4F"/>
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="FontSize" Value="18"/>



        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border BorderThickness="1.5,1.5,1.5,1.5" Background="{TemplateBinding Background}" CornerRadius="5" BorderBrush="{TemplateBinding BorderBrush}">
                        </Border>
                        <ContentPresenter Margin="25,10,25,10" HorizontalAlignment="Center" Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border BorderThickness="1.5,1.5,1.5,1.5" Background="#FF7F7F7F" CornerRadius="10" BorderBrush="{TemplateBinding BorderBrush}">
                                </Border>
                                <ContentPresenter Margin="25,10,25,10" HorizontalAlignment="Center" Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>


        </Style.Triggers>
    </Style>

</ResourceDictionary>